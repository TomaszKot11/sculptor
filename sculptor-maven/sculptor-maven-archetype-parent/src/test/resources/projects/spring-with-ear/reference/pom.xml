<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>archetype.it</groupId>
	<artifactId>basic-parent</artifactId>
	<packaging>pom</packaging>
	<version>0.1-SNAPSHOT</version>
	<name>New Sculptor Project :: Parent</name>

	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>

		<java-version>1.8</java-version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>

		<sculptor-version>3.2.0-SNAPSHOT</sculptor-version>
		<jboss-javaee6-version>3.0.3.Final</jboss-javaee6-version>
		<hibernate-validator-version>6.2.0.Final</hibernate-validator-version>
		<ehcache-version>3.9.0</ehcache-version>
		<tomcat-jasper-el>9.0.41</tomcat-jasper-el>
		<slf4j-version>1.7.30</slf4j-version>
		<logback-version>1.2.3</logback-version>
		<spring-version>5.3.3</spring-version>
		<aspectj-version>1.9.6</aspectj-version>
		<joda-time-version>2.10.9</joda-time-version>
		<jackson-version>2.12.0</jackson-version>
		<xstream-version>1.4.15</xstream-version>

		<junit-version>5.7.0</junit-version>
		<hamcrest-version>2.2</hamcrest-version>
		<hsqldb-version>2.5.1</hsqldb-version>
	</properties>

	<modules>
		<module>../basic</module>
		<!-- Add web module when needed -->
		<!-- <module>../basic-web</module> -->
		<module>../basic-ear</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-framework-bom</artifactId>
				<version>\${spring-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<!-- Despite of the BOM POM do we have to keep spring-core from using commons-logging -->
				<groupId>org.springframework</groupId>
				<artifactId>spring-core</artifactId>
				<version>\${spring-version}</version>
				<exclusions>
					<exclusion>
						<groupId>commons-logging</groupId>
						<artifactId>commons-logging</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.jboss.spec</groupId>
				<artifactId>jboss-javaee-6.0</artifactId>
				<version>\${jboss-javaee6-version}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>5.7.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<version>5.7.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest</artifactId>
			<version>2.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
